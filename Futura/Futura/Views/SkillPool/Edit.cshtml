@model Futura.Models.SkillPool

@{
    ViewBag.Title = "Edit";
}

<h2>Editieren</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SkillPool</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.SkillPoolID)

        <div class="form-group">
            @Html.LabelFor(model => model.EntwicklerID, "Entwickler")            
            @Html.DropDownList("EntwicklerID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.EntwicklerID)
            
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SprachID, "Sprache")            
            @Html.DropDownList("SprachID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SprachID)            
        </div>

        <div class="form-group">            
            <input type="submit" value="Speichern" class="btn btn-default" />            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück zur Liste", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
