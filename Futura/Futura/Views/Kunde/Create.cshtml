@model Futura.Models.Kunde

@{
    ViewBag.Title = "Create";
}

<h2>Erstellen</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Kunde</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.KundenName)            
            @Html.TextBoxFor(model => model.KundenName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.KundenName)
            
        </div>

        <div class="form-group">            
                <input type="submit" value="Erstellen" class="btn btn-default" />            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück zur Liste", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
