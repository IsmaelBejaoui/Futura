@model IEnumerable<Futura.Models.Kunde>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (Request.IsAuthenticated) {
<p>
    @Html.ActionLink("Erstellen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Kundenname", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KundenName)
        </td>
        <td>
            @Html.ActionLink("Editieren", "Edit", new { id=item.KundenID }) |
            @Html.ActionLink("Details", "Details", new { id=item.KundenID }) |
            @Html.ActionLink("Löschen", "Delete", new { id=item.KundenID })
        </td>
    </tr>
}

</table>
}