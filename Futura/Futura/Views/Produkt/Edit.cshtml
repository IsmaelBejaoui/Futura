@model Futura.Models.Produkt

@{
    ViewBag.Title = "Edit";
}

<h2>Editieren</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Produkt</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ProduktID)

        <div class="form-group">
            @Html.LabelFor(model => model.Produkttitel)            
            @Html.TextBoxFor(model => model.Produkttitel, new { @class = "form-control" })                
            @Html.ValidationMessageFor(model => model.Produkttitel)
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.SprachID, "SprachID")           
            @Html.DropDownList("SprachID", null, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SprachID)           
        </div>

        <div class="form-group">            
                <input type="submit" value="Speichern" class="btn btn-default" />            
        </div>
    </div>
}

<div>
    @Html.ActionLink("Zurück zur Liste", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
